# Maintainer: FooTearth <footearth@gmail.com>

pkgname=rmirrors
pkgver=0.1
pkgrel=1
pkgdesc="rank mirrors and set /etc/pacman.d/mirrors."
arch=('i686' 'x86_64') # Binary app, doesn't work on x86_64
url="http://www.debugmode.com/wink/"
license=('GPL3')
depends=(pacman python)
# install=
source=(http://archpkg-ft.googlecode.com/svn/backup/rmirrors.tar.bz2)
md5sums=('61c0203d92781359141892781dcfcf8e')

build(){
	install -dm755 $pkgdir/usr/{bin,share}
	cp -R $srcdir/$pkgname $pkgdir/usr/share
	install -Dm755 $pkgdir/usr/share/$pkgname/${pkgname}.sh $pkgdir/usr/bin/$pkgname
}
