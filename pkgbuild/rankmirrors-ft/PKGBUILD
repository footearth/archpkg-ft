# Contributor: FooTearth <footearth@gmail.com>

pkgname=rankmirrors-ft
pkgver=0.1
pkgrel=1
pkgdesc="rank mirrors and set /etc/pacman.d/mirrors."
arch=('i686' 'x86_64')
url="http://archpkg-ft.googlecode.com/"
license=('GPL3')
depends=(pacman)
# install=
source=(http://archpkg-ft.googlecode.com/svn/pkgbuild/rankmirrors-ft/rankmirrors-ft.tar.bz2)
md5sums=('cb3ef7cc9bcd8d56528190911f1f50ce')

build(){
	install -dm755 $pkgdir/usr/{bin,share}
	cp -R $srcdir/$pkgname $pkgdir/usr/share
	install -Dm755 $pkgdir/usr/share/$pkgname/${pkgname}.sh $pkgdir/usr/bin/$pkgname
}
